<?xml version="1.0"?>
<config>
    <tabs>
        <magento_ireland translate="label" module="loadjquery">
            <label>Magento Ireland</label>
            <sort_order>196</sort_order>
        </magento_ireland>
    </tabs>
    <sections>
        <loadjquery translate="label" module="loadjquery">
            <label>Load jQuery</label>
            <tab>magento_ireland</tab>
            <frontend_type>text</frontend_type>
            <sort_order>50</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable jQuery v1.4.2 on all pages</label>
                            <comment>Load jQuery on all site pages.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <enabled_product_view translate="label">
                            <label>Enable jQuery v1.4.2 on product view pages only</label>
                            <comment>
                                <![CDATA[Saves unnecessary loading if jQuery
                                    is only used on product view page. The <strong>Load
                                    on all pages</strong> option must be set
                                    to <strong>No</strong>.]]>
                            </comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled_product_view>
                    </fields>
                </general>
            </groups>
        </loadjquery>
    </sections>
</config>
